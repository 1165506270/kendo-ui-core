#!/usr/bin/env bash

export NODE_PATH=.:/usr/lib/node_modules

jake merge-scripts

source build/temp-browser-profiles.sh

tests/tests.js tests/ 8884 1>test-results.xml || exit 1

# Update docs submodule
sh -c 'cd docs && git fetch && git reset --hard origin/master'

# Check the generated VSDoc
jake vsdoc > /tmp/vsdoc.js && /usr/lib/node_modules/jshint/bin/hint /tmp/vsdoc.js || exit 1
