    /// Defines the fluent API for adding items to Kendo <%= owner.csharp_name %> for ASP.NET MVC
    /// </summary>
    public class <%= csharp_builder_class %><%= csharp_generic_args %> : IHideObjectMembers<%= csharp_generic_constraints %>
    {
        private readonly <%= csharp_class %> container;

        public <%= csharp_builder_class %>(<%= csharp_class %> container)
        {
            this.container = container;
        }

        public virtual <%= csharp_item_class %>Builder<%= csharp_generic_args %> Add()
