#!/usr/bin/env bash

rm -f release/*zip

jake bundles && jake demos:pack-production

jake demos:staging && rsync -avc deploy/staging/ /var/www/staging/

cp -rf release/*zip deploy/online-examples.zip /kendo-builds/Stable

jake winjs && cp -R release/winjs/* /kendo-builds/WinJS/Stable/

find /kendo-builds/Stable/* -mtime +2 -exec rm {} \;

jake download-builder:staging && rsync -avc deploy/download-builder-staging/ /var/www/download-builder-staging/

rm -rf release/*
