#!upstart
description "Android emulator"
author      "Kendo Team"

start on startup
stop on shutdown

exec start-stop-daemon --start --background --make-pidfile --pidfile /var/run/android-emulator.pid --exec <%= @emulator %> -- -avd <%= @avd %> -no-window -no-boot-anim 2>&1

pre-start script
    echo "[`date`] (sys) Starting" >> /var/log/android-emulator.log
end script

pre-stop script
    rm /var/run/android-emulator.pid
    echo "[`date -u +%Y-%m-%dT%T.%3NZ`] (sys) Stopping" >> /var/log/android-emulator.log
end script
