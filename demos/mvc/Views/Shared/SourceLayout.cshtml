<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="styles/kendo.common.min.css" rel="stylesheet" />
    <link href="styles/kendo.default.min.css" rel="stylesheet" />
    <link href="styles/kendo.dataviz.min.css" rel="stylesheet" />
    <link href="styles/kendo.dataviz.default.min.css" rel="stylesheet" />
    @if ((ViewBag.Mobile && !ViewBag.DisableInMobile) || ViewBag.MobileAngular)
    {
        <link href="styles/kendo.mobile.all.min.css" rel="stylesheet" />
    } else if (ViewBag.DisableInMobile)
    {
        <link href="styles/kendo.default.mobile.min.css" rel="stylesheet" />
    }
    @if (Request.Url.PathAndQuery.Contains("right-to-left"))
    {
    <link href="styles/kendo.rtl.min.css" rel="stylesheet" />
    }

    <script src="js/jquery.min.js"></script>
    <script src="js/jszip.min.js"></script>
    <script src="js/angular.min.js"></script>
    <script src="js/kendo.all.min.js"></script>
    @if (ViewBag.MobileAngular)
    {
    <style>
        html, body {
            height: 100%;
        }
    </style>
    }
</head>
<body>
    @{ WriteTo(new StringWriter(), RenderSection("Description", false)); }
    @RenderBody()

    @if (ViewBag.Mobile && !ViewBag.DisableInMobile)
    {
<script>
    var app = new kendo.mobile.Application(document.body);
</script>
    }
</body>
</html>
