        <div id="example" class="k-content">
            <div class="chart-wrapper">
                <div id="chart"></div>
            </div>
            <script>
                function createChart() {
                    $("#chart").kendoChart({
                        title: {
                            text: "Olympic Medals won by USA"
                        },
                        legend: {
                            position: "bottom"
                        },
                        seriesDefaults: {
                            type: "column"
                        },
                        series: [{
                            name: "Gold Medals",
                            data: [40, 32, 34, 36, 45, 33, 34, 83, 36, 37, 44, 37, 35, 36, 46],
                            color: "#f3ac32"
                        }, {
                            name: "Silver Medals",
                            data: [19, 25, 21, 26, 28, 31, 35, 60, 31, 34, 32, 24, 40, 38, 29],
                            color: "#b8b8b8"
                        }, {
                            name: "Bronze Medals",
                            data: [17, 17, 16, 28, 34, 30, 25, 30, 27, 37, 25, 33, 26, 36, 29],
                            color: "#bb6e36"
                        }],
                        categoryAxis: {
                            labels: {
                                rotation: -90
                            },
                            select: {
                                from: 5,
                                to: 10
                            }
                        },
                        tooltip: {
                            visible: true
                        },
                        selectStart: onSelectStart,
                        select: onSelect,
                        selectEnd: onSelectEnd
                    });
                }

                function onSelectStart(e) {
                    kendoConsole.log(kendo.format("Select start :: {0} - {1}", e.from, e.to));
                }

                function onSelect(e) {
                    kendoConsole.log(kendo.format("Select :: {0} - {1}", e.from, e.to));
                }

                function onSelectEnd(e) {
                    kendoConsole.log(kendo.format("Select end :: {0} - {1}", e.from, e.to));
                }

                $(document).ready(createChart);
                $("#example").bind("kendo:skinChange", createChart);
            </script>
            <div class="demo-section">
                <h3 class="title">Console log</h3>
                <div class="console"></div>
            </div>
            <style scoped>
                .chart-wrapper, .chart-wrapper .k-chart {
                    height: 250px;
                }

                .demo-section {
                    width: 700px;
                }
            </style>
        </div>
