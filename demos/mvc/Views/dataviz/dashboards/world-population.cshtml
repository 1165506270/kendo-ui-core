        <div id="example" class="k-content absConf">
            <h3 class="example-title">Stock<span>History</span></h3>
            <h4 class="example-description">Kendo UI Data Visualization Project</h4>

            <div id="filtering-tabs"></div>

            <h5 class="example-subtitle">Population through the decade</h5>

            <div>Chart type</div>
            <ul class="chart-type">
                <li><label><input type="radio" name="chart-type" value="line" checked>Line</label></li>
                <li><label><input type="radio" name="chart-type" value="area">Area</label></li>
            </ul>

            <div id="yearly-stock-values"></div>

            <script>
                var stocksDataSource = new kendo.data.DataSource({
                        transport: {
                            read: {
                                url: "../../content/dataviz/dashboards/stock-data.json",
                                dataType: "json"
                            }
                        },

                        sort: {
                            field: "date",
                            dir: "asc"
                        },

                        group: {
                            field: "symbol"
                        },

                        schema: {
                            model: {
                                fields: {
                                    date: {
                                        type: "date"
                                    }
                                }
                            }
                        }
                    });

                $("#yearly-stock-values").kendoChart({
                    dataSource: stocksDataSource,
                    autoBind: false,
                    seriesDefaults: {
                        type: "line",
                        groupNameTemplate: "#= group.value.substring(3) #",
                        overlay: {
                            gradient: "none"
                        },
                        markers: {
                            visible: false
                        },
                        majorTickSize: 0,
                        opacity: 1
                    },

                    series: [{
                        field: "high"
                    }],

                    seriesColors: [ "#2b8abe", "#d7445c", "#45cd74" ],

                    valueAxis: {
                        line: {
                            visible: false
                        },

                        labels: {
                            format: "${0}",
                            skip: 1,
                            color: "#727f8e"
                        }
                    },

                    categoryAxis: {
                        field: "date",

                        labels: {
                            format: "{0:MMM}",
                            step: 27,
                            color: "#727f8e"
                        },

                        line: {
                            visible: false
                        },

                        majorTicks: {
                            visible: false
                        },

                        majorGridLines: {
                            visible: false
                        }
                    },

                    legend: {
                        visible: true
                    }
                });

                $("[name=chart-type]").on("click", function() {
                    var chart = $("#yearly-stock-values").data("kendoChart"),
                        series = chart.options.series,
                        newSeriesType = $(this).val();

                    for (var serie in series) {
                        series[serie].type = newSeriesType;
                        series[serie].opacity = newSeriesType == "area" ? .6 : 1;
                    }

                    chart.redraw();
                });

                $("#filtering-tabs").kendoTabStrip({
                    dataSource: ["2007","2008","2009","2010","2011"],
                    change: function(e) {
                        var endYear = this.value();

                        stocksDataSource.filter([{
                            field: "date",
                            operator: "gte",
                            value: new Date(endYear, 0, 1)
                        }, {
                            field: "date",
                            operator: "lte",
                            value: new Date(endYear, 11, 31)
                        }]);
                    }
                }).data("kendoTabStrip").select(4);

            </script>

