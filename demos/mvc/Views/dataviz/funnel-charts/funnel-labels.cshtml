<div id="example" class="k-content">
    <div class="chart-wrapper">
        <div id="chart"></div>
    </div>
    <div class="configuration-horizontal">
        <div class="config-section">
            <span class="configHead">Labels Configuration</span>
            <ul class="options">
                <li>
                    <label>
                        <input id="labels" checked="checked" type="checkbox" autocomplete="off" />
                        Show labels
                    </label>
                </li>
                <li>
                    <label>
                        <input name="alignType" type="radio"
                           value="center" checked="checked" autocomplete="off" />
                        Align in the center
                    </label>
                </li>
                <li>
                    <label>
                        <input name="alignType" type="radio"
                           value="left" autocomplete="off" />
                        Align on the left
                    </label>
                </li>
                <li>
                    <label>
                        <input name="alignType" type="radio"
                           value="right" autocomplete="off" />
                        Align on the right
                    </label>
                </li>
                <li>
                    <label>Font size:
                        <input id="sizeSlider" value="15" />
                    </label>
                </li>
                <li>
                    <input id="color" />
                </li>
                <li>
                    <label>
                        <input id="showBorder" type="checkbox" checked="checked" />
                        Show border
                    </label>
                </li>
            </ul>
        </div>
    </div>
    <script>
        function createChart() {
            $("#chart").kendoChart({
                title: {
                    text: "What is you favourite sport?"
                },
                legend: {
                   position: "top"
                },
                seriesDefaults: {
                    labels: {
                        template: "#= dataItem.category # - #= value #",
                        visible: true,      
                        font : "15px sans-serif",                  
                        align: "center",
                        background: "transparent",
                        color: "#000",
                        padding: 5,
                        border: {
                            width: 1,
                            dashType :"dot",
                            color: "#000"
                        }
                    }
                },
                series: [{
                    type: "funnel",
                    dependOn : "height",
                    data: [{
                        category: "Football",
                        value: 35
                    }, {
                        category: "Basketball",
                        value: 25
                    }, {
                        category: "Volleyball",
                        value: 20
                    }, {
                        category: "Rugby",
                        value: 10
                    }, {
                        category: "Tennis",
                        value: 10
                    }]
                }],
                tooltip: {
                    visible: true,
                    template: "#= category # - #= kendo.format('{0:P}', percentage) #"
                }
            });
        }

        $(document).ready(function () {
            createChart();
            $('#sizeSlider').kendoSlider({
                change: refresh,
                min: 1,
                max: 40
            });
            $('#color').kendoColorPicker({ change: refresh, value: "#000" });
            $(document).bind("kendo:skinChange", createChart);
            $(".configuration-horizontal").on("change",":checkbox,:radio", refresh);
        });

        function refresh() {
            var chart = $("#chart").data("kendoChart"),
                slider = $('#sizeSlider').data("kendoSlider"),
                colorPicker = $('#color').data("kendoColorPicker"),
                showBorder = $('#showBorder').is(':checked'),
                funnelSeries = chart.options.series[0],
                labepOptions = funnelSeries.labels,
                labels = $("#labels").prop("checked"),
                alignInputs = $("input[name='alignType']"),
                alignLabels = alignInputs.filter(":checked").val();

            chart.options.transitions = false;
            labepOptions.visible = labels;
            labepOptions.align = alignLabels;
            labepOptions.font = slider.value() + "px sans-serif";
            labepOptions.color = colorPicker.value();
            labepOptions.border = showBorder ? {
                width: 1,
                dashType: "dot",
                color: "#000"
            } : {
                width:0
            };

            $('#showBorder').attr("disabled", !labels);
            alignInputs.attr("disabled", !labels);
            slider.enable(labels);
            colorPicker.enable(labels);

            chart.refresh();
        }
    </script>

    <style scoped>
        .chart-wrapper, .chart-wrapper .k-chart {
            height: 400px;
        }
    </style>
</div>
