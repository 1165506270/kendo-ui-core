        <div id="example" class="k-content absConf">
            <div id="gauge-container">
                <div id="rpm"></div>
                <div id="kmh"></div>
                <div id="fuel"></div>
                <div id="water-temprature"></div>
            </div>

            <script>

                function createDashboard() {
                    $("#rpm").kendoGauge({
                        theme: "black",

                        pointer: {
                            value: 2
                        },

                        scale: {
                            startAngle: -45,
                            endAngle: 120,

                            min: 0,
                            max: 6,

                            majorUnit: 1,
                            majorTicks: {
                                size: 6
                            },

                            minorUnit: .1,
                            minorTicks: {
                                size: 4
                            },

                            ranges: [{
                                from: 4,
                                to: 5,
                                color: "#ff7a00"
                            }, {
                                from: 5,
                                to: 6,
                                color: "#c20000"
                            }]
                        }
                    });

                    $("#kmh").kendoGauge({
                        theme: "black",

                        pointer: {
                            value: 68
                        },

                        scale: {
                            startAngle: -60,
                            endAngle: 240,

                            min: 0,
                            max: 220,

                            minorTicks: {
                                size: 10
                            },

                            majorTicks: {
                                size: 14
                            },

                            minorUnit: 2
                        }
                    });

                    $("#fuel").kendoGauge({
                        theme: "black",

                        pointer: {
                            value: .3
                        },

                        scale: {
                            startAngle: 90,
                            endAngle: 180,

                            min: 0,
                            max: 1,

                            minorUnit: .1,

                            majorUnit: .5,

                            labels: {
                                font: "9px Arial,Helvetica,sans-serif"
                            },

                            ranges: [{
                                from: 0,
                                to: .1,
                                color: "#c20000"
                            }]
                        }
                    });

                    $("#water-temprature").kendoGauge({
                        theme: "black",

                        pointer: {
                            value: 68
                        },

                        scale: {
                            startAngle: 180,
                            endAngle: 270,

                            min: 60,
                            max: 120,

                            majorUnit: 30,

                            minorUnit: 10,

                            labels: {
                                font: "9px Arial,Helvetica,sans-serif"
                            },

                            ranges: [{
                                from: 90,
                                to: 100,
                                color: "#ff7a00"
                            }, {
                                from: 100,
                                to: 120,
                                color: "#c20000"
                            }]
                        }
                    });
                }

                $(document).ready(function() {
                    createDashboard();

                    $(document).bind("kendo:skinChange", function(e) {
                        createDashboard();
                    });
                });
            </script>

