<div id="example" ng-app="KendoDemos">
    <div ng-controller="MyCtrl">
    <div class="demo-section k-content">
        <div class="box-col" style="width: 500px;">
            <h4>Barcode</h4>
            <span kendo-barcode
                  k-type="'code128'"
                  ng-model="barcode"
                  style="width: 180px"></span>
        </div>
        <div class="box-col" style="width: 500px;">
            <h4>Set value</h4>
            <input ng-model="barcode" />
        </div>
    </div>
    </div>
<script>
    angular.module("KendoDemos", [ "kendo.directives" ]).controller("MyCtrl", function($scope){
        $scope.barcode = "Cheese";
    })
</script>
</div>
