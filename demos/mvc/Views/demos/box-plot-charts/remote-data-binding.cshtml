<div id="example">
    <div class="demo-section k-content">
        <div id="chart"></div>
    </div>
    <script>
        function createChart() {
            $("#chart").kendoChart({
                theme: window.kendoTheme,
                dataSource: {
                    transport: {
                        read: {
                            url: "../content/dataviz/js/ozone.json",
                            dataType: "json"
                        }
                    },
                    sort: {
                        field: "year",
                        dir: "asc"
                    }
                },
                title: {
                    text: "Ozone Concentration (ppm)"
                },
                legend: {
                    visible: false
                },
                series: [{
                    type: "boxPlot",
                    lowerField: "lower",
                    q1Field: "q1",
                    medianField: "median",
                    q3Field: "q3",
                    upperField: "upper",
                    outliersField: "outliers",
                    meanField: "mean",
                    categoryField: "year"
                }]
            });
        }

        $(document).ready(createChart);
        $(document).bind("kendo:skinChange", createChart);
    </script>
</div>
