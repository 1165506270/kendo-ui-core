<div id="example">
    <div class="demo-section k-content">
        <div id="chart"></div>
    </div>
    <script>
        function createChart() {
            $("#chart").kendoChart({
                theme: window.kendoTheme,
                title: {
                    text: "Antenna Gain (dB)"
                },
                dataSource: {
                    transport: {
                        read: {
                            url: "../content/dataviz/js/antenna-gain.json",
                            dataType: "json"
                        }
                    }
                },
                series: [{
                    type: "polarLine",
                    xField: "azimuth",
                    yField: "gain"
                }],
                xAxis: {
                    majorUnit: 30
                }
            });
        }

        $(document).ready(createChart);
        $(document).bind("kendo:skinChange", createChart);
    </script>
</div>
