        <div id="example">
            <div class="demo-section k-header">
                <div id="toolbar"></div>
            </div>
            <script>
                $(document).ready(function() {
                    $("#toolbar").kendoToolBar({
                        items: [
                            { type: "button", text: "Button" },
                            { type: "button", text: "Toggle Button", toggable: true },
                            {
                                type: "splitButton",
                                text: "Split Button",
                                items: [
                                    { text: "Insert above", icon: "insert-n" },
                                    { text: "Insert between", icon: "insert-m" },
                                    { text: "Insert below", icon: "insert-s" }
                                ]
                            },
                            {
                                template: "<input id='dropdown' style='width: 150px;' />",
                                overflow: "never"
                            },
                            {
                                type: "buttonGroup",
                                items: [
                                    { spriteCssClass: "k-tool-icon k-justifyLeft", text: "Left", toggable: true },
                                    { spriteCssClass: "k-tool-icon k-justifyCenter", text: "Middle", toggable: true },
                                    { spriteCssClass: "k-tool-icon k-justifyRight", text: "Right", toggable: true }
                                ]
                            },
                            {
                                type: "buttonGroup",
                                items: [
                                    { text: "Radio 1", toggable: true, group: "radio" },
                                    { text: "Radio 2", toggable: true, group: "radio" },
                                    { text: "Radio 3", toggable: true, group: "radio" }
                                ]
                            },
                            {
                                type: "button",
                                text: "Action",
                                overflow: "always"
                            },
                            {
                                type: "button",
                                text: "Another Action",
                                overflow: "always"
                            },
                            {
                                type: "button",
                                text: "Something else here",
                                overflow: "always"
                            }
                        ]
                    });

                    $("#dropdown").kendoDropDownList({
                        optionLabel: "Drop Down",
                        dataTextField: "text",
                        dataValueField: "value",
                        dataSource: [
                            { text: "Option 1", value: 1 },
                            { text: "Option 2", value: 2 },
                            { text: "Option 3", value: 3 },
                            { text: "Option 4", value: 4 }
                        ]
                    });
                });
            </script>

        </div>
