<div id="example">
        <div class="demo-section k-header">
            <div id="treelist" style="height: 400px;"></div>
        </div>

        <script>
            $(document).ready(function() {
                var service = "http://demos.telerik.com/kendo-ui/service/Northwind.svc";
                var crudServiceBaseUrl = "http://gyoshev.telerik.com:8080/KendoCRUDService";

                $("#treelist").kendoTreeList({
                    dataSource: {
                        transport: {
                            read: {
                                url: crudServiceBaseUrl + "/EmployeeDirectory/All",
                                dataType: "jsonp"
                            }
                        },
                        schema: {
                            model: {
                                id: "EmployeeID",
                                fields: {
                                    parentId: { field: "ReportsTo",  nullable: true },
                                    EmployeeID: { field: "EmployeeId", type: "number" }
                                },
                                expanded: true
                            }
                        }
                    },
                    filterable: true,
                    columns: [
                        { field: "FirstName", title: "First Name", width: 250 },
                        { field: "LastName", title: "Last Name", sortable: true },
                        { field: "Position", sortable: true },
                        { field: "Extension", sortable: true }
                    ]
                });
            });
        </script>
    </div>
