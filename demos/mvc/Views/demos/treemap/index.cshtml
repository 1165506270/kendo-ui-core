<div id="example">
    <div class="demo-section k-header" style="padding: 1em;">
        <div id="treeMap" style="height: 600px; font-size: 12px;"></div>
        <style scoped>
            .k-leaf {
                color: #fff;
            }
            .k-leaf:hover {
                border: 0;
                color: #fff;
                padding: .7em;
            }
            .k-tile-inverse,
            .k-tile-inverse:hover {
                color: #000;
            }
        </style>
    </div>
    <script>
        function treeMap() {
            $("#treeMap").kendoTreeMap({
                dataSource: {
                    transport: {
                        read: {
                            url: "../content/dataviz/js/population-usa.json",
                            dataType: "json"
                        }
                    },
                    schema: {
                        model: {
                            children: "items"
                        }
                    }
                },
                valueField: "value",
                textField: "name"
            });
        }

        $(document).ready(treeMap);
        $(document).bind("kendo:skinChange", treeMap);
    </script>
</div>
