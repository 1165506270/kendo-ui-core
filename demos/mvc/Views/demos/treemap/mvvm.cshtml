<div id="example">
    <div class="demo-section k-header" style="padding: 1em;">
        <div class="box-col" style="width: 500px;">
            <h4>Hover some series</h4>
            <div data-role="treemap"
                 data-text-field="name"
                 data-value-field="value"
                 data-bind="
                    source: populationUSA,
                    events: { dataBound: onDataBound }">
            </div>
        </div>
        <div class="box-col">
            <h4>Console</h4>
            <div class="console"></div>
        </div>
    </div>

    <style scoped>
        .k-leaf {
            color: #fff;
        }
        .k-leaf:hover {
            border: 0;
            color: #fff;
            padding: .7em;
        }
        .k-tile-inverse,
        .k-tile-inverse:hover {
            color: #000;
        }
    </style>
    <script>
        function treeMap() {
            var viewModel = kendo.observable({
                onDataBound: function (e) {
                    kendoConsole.log("Data Bound");
                },
                populationUSA: new kendo.data.HierarchicalDataSource({
                    transport: {
                        read: {
                            url: "../content/dataviz/js/population-usa.json",
                            dataType: "json"
                        }
                    },
                    schema: {
                        model: {
                            children: "items"
                        }
                    }
                })
            });
            kendo.bind($("#example"), viewModel);
        }

        $(document).ready(treeMap).bind("kendo:skinChange", treeMap);
    </script>
</div>
