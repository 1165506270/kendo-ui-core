<div id="music" data-role="view" data-title="Form Elements" data-init="initForm">
    <ul data-role="listview" data-style="inset">
        <li>
            <select>
                <option value="First Option">First Option</option>
                <option value="Second Option">Second Option</option>
                <option value="Third Option">Third Option</option>
                <option value="Fourth Option">Fourth Option</option>
            </select>
            Select element
        </li>
        <li>
            <select id="dropdown">
                <option value="First Option">First Option</option>
                <option value="Second Option">Second Option</option>
                <option value="Third Option">Third Option</option>
                <option value="Fourth Option">Fourth Option</option>
                <option value="First Option">Fifth Option</option>
                <option value="Sixth Option">Fifth Option</option>
            </select>
            Kendo DropDownList
        </li>
        <li>
            <input type="text" value="Text" />
            Type text
        </li>
        <li>
            <input type="password" value="password" />
            Type password
        </li>
        <li>
            <input type="search" value="search" />
            Type search
        </li>
        <li>
            <input type="url" value="http://www.kendoui.com" />
            Type url
        </li>
        <li>
            <input type="email" value="kendoui@kendoui.com" />
            Type email
        </li>
        <li>
            <input type="number" value="20" />
            Type number
        </li>
        <li>
            <input type="tel" value="+44 22 11 10" />
            Type tel
        </li>
        <li>
            <input type="date" value="2012-03-22" />
            Type date
        </li>
        <li>
            <input type="time" value="22:30" />
            Type time
        </li>
        <li>
            <input type="month" value="2012-01" />
            Type month
        </li>
        <li>
            <input type="datetime" value="2012-03-22T20:15Z" />
            Type datetime
        </li>
    </ul>
</div>
<script>
    function initForm() {
        var list = $("#dropdown").kendoDropDownList()
                                  .data("kendoDropDownList");

        // The following is only intended for the Desktop examples. You don't need to run this on mobile.
        var body = list.element.parents(".km-vertical:not(.km-blackberry)");
        if (body.length) {
            list.popup.options.appendTo = body;
            list.popup.element.appendTo(body);
            list.popup.options.animation.open.effects = body.hasClass("km-android") ? "fadeIn" : body.hasClass("km-ios") ? "slideIn:up" : list.popup.options.animation.open.effects;
        }
    }
</script>
