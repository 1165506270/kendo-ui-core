<div data-role="view" id="flat" data-init="mobileListViewDataBindInitFlat" data-title="ListView">

    Flat listview | <a data-role="button" href="#grouped">Grouped listview</a>

    <ul id="flat-listview"></ul>
</div>

<div data-role="view" id="grouped" data-init="mobileListViewDataBindInitGrouped" data-transition="" data-title="ListView">
    <a href="#flat" data-role="button">Flat listview</a> | Grouped listview

    <ul id="grouped-listview"></ul>
</div>

<script>
    var groupedData = [
        {name: "Sashimi Salad", letter: "S" },
        {name: "Seaweed Salad", letter: "S" },
        {name: "Edamame", letter: "E" },
        {name: "Maguro", letter: "M" },
        {name: "Tekka Maki", letter: "T" },
        {name: "Tori Katsu", letter: "T" }
    ]

    var flatData = [ "Sashimi Salad", "Seaweed Salad", "Edamame", "Maguro", "Tekka Maki" ];

    function mobileListViewDataBindInitFlat() {
        $("#flat-listview").kendoMobileListView({ dataSource: flatData });
    }

    function mobileListViewDataBindInitGrouped() {
        $("#grouped-listview").kendoMobileListView({
            dataSource: kendo.data.DataSource.create({data: groupedData, group: "letter" }),
            template: "${name}",
        });
    }
</script>
