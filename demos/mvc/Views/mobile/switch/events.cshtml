<div data-role="view" id="switch-events" data-init="mobileSwitchEventsInit">
    <ul data-role="listview" data-style="inset" data-type="group">
        <li>General Settings
            <ul>
                <li>Automatic Update <input id="mobile-switch" data-role="switch" /></li>
            </ul>
        </li>
    </ul>
    <div class="console"></div>
</div>

<script>
    function mobileSwitchEventsInit() {
        $("#mobile-switch").data("kendoMobileSwitch").bind("change", function(e) {
            kendoConsole.log("switch value was changed to " + (e.checked ? "checked" : "unchecked"));
        });
    }
</script>
