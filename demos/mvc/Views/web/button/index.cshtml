
        <div id="example" class="k-content">

            <div class="demo-section">
                <div id="buttonsWrapper" style="border: 2px solid red; padding: 10px;">
                    <button class="k-button k-primary">Primary</button>
                    <button class="k-button">Secondary</button>
                    <button class="k-button k-primary k-state-disabled">Primary Disabled</button>
                </div>

                <h3>Basic Button</h3>
                <p>
                    <button type="button" id="textButton">Submit</button>
                </p>
                
                <h3>Buttons with icons</h3>
                <p>
                    <a id="iconTextButton">Filter</a>
                    <a id="kendoIconTextButton">Clear Filter</a>
                    <em id="iconButton"><span class="k-sprite">Refresh</span></em>
                </p>
                
                <h3>Disabled Buttons</h3>
                <p>
                    <span id="disabledButton1">Disabled via configuration</span>
                    <span id="disabledButton2" disabled>Disabled via HTML attribute</span>
                </p>
            </div>

            <script>
                $(document).ready(function() {
                    $("#textButton").kendoButton();

                    $("#iconTextButton").kendoButton({
                        spriteCssClass: "k-icon k-i-funnel"
                    });

                    $("#kendoIconTextButton").kendoButton({
                        icon: "funnel-clear"
                    });

                    $("#iconButton").kendoButton({
                        spriteCssClass: "k-icon k-i-refresh"
                    });

                    $("#disabledButton1").kendoButton({
                        enable: false
                    });

                    $("#disabledButton2").kendoButton();
                });
            </script>
            
            <style scoped>
