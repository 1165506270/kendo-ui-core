
        <div id="example" class="k-content">

            <div class="k-rtl">
                <input id="input" />
            </div>

            <script>
                $(document).ready(function() {
                    var data = [
                        { text: "Item 1", value:"1" },
                        { text: "Item 2", value:"2" },
                        { text: "Item 3", value:"3" }
