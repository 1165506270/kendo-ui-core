<div id="example" class="k-content">
    <div id="container">
        <div id="store">
            Store
            <button class="toggle">Go to library</button>
        </div>
        <div id="library">
            Library
            <button class="toggle">Go to store</button>
        </div>
    </div>

    <script>
        var inLibrary = true;

        function toggle() {
            var containerFx = kendo.fx($("#container")),
                library = $("#library"),
                store = $("#store");

            if (inLibrary) {
                containerFx.flipHorizontal(library, store).play();
            } else {
                containerFx.flipHorizontal(store, library).play();
            }

            inLibrary = !inLibrary;
        }

        $(".toggle").click(toggle);
    </script>

    <style>
        #container {
            position: relative;
            width: 300px;
            height: 400px;
            margin: 0 auto;
            background-color: #000;
            border: 3px solid black;
        }

        #library {
            position: absolute;
            width: 100%;
            height: 100%;
            color: #222;
            background-color: #e8cc9a;
            background-image: url(../../content/shared/images/patterns/pattern2.png);
        }

        #store {
            position: absolute;
            width: 100%;
            height: 100%;
            color: #fff;
            background-color: #3a3a3a;
        }
    </style>
</div>
