<div id="example" class="k-content">

    <button id="actionsheet-trigger">Open Actionsheet</button>

    <div id="actionResult"></div>

    <ul id="inboxActions">
        <li class="km-actionsheet-title">Monday Meeting:</li>
        <li><a href="#" data-action="reply">Reply</a></li>
        <li><a href="#" data-action="replyAll">Reply All</a></li>
        <li><a href="#" data-action="archive">Archive</a></li>
    </ul>
</div>

<script>
    $(function() {
        $("#inboxActions").kendoMobileActionSheet({ type: "tablet" });

        $("#actionsheet-trigger").click(function() {
            $("#inboxActions").data("kendoMobileActionSheet").open(this);
        });
    });

    function reply(e) {
        $("#actionResult").html("Replying to message ");
    }

    function replyAll(e) {
        $("#actionResult").html("Replying to all in message");
    }

    function archive(e) {
        $("#actionResult").html("Archiving message");
    }
</script>
