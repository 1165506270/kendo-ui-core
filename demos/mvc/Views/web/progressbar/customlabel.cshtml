<div id="example" class="k-content">
    <div class="demo-section">
        <h2>Sign up form</h2>
        <div>
            <ul class="forms">
                <li>
                    <h3>Username</h3>
                    <input type="text" name="userName" value="" class="k-textbox" />
                </li>
                <li>
                    <h3>Password</h3>
                    <input id="userPass" type="password" name="userPass" value="" class="k-textbox" />
                </li>
                <li>
                    <h3>Password strength</h3>
                    <div id="passStrength"></div>
                </li>
                <li>
                    <button id ="signupButton" class="k-button">Sign up!</button>
                </li>
            </ul>
        </div>
    </div>
    <script>
        var passProgress;
        $(document).ready(function () {
            passProgress = $("#passStrength").kendoProgressBar({
                type: "value",
                max: 9,
                animation: false,
                change: onChange
            }).data("kendoProgressBar");

            passProgress.wrapper.find(".k-progress-status").text("Weak");
        });

        $("#userPass").keyup(function () {
            passProgress.value(this.value.length);
        });

        $("#signupButton").click(function () {
            var strength = passProgress.wrapper.find(".k-progress-status:first").text()
            alert("Your password is " + strength);
        });

        function onChange(e) {
            var progressWrapper = this.wrapper.find(".k-state-selected");
            var progressStatus = this.wrapper.find(".k-progress-status");

            progressWrapper.css({
                "background-image": "none",
                "border-image": "none"
            });

            if (e.value <= 3) {
                progressStatus.text("Weak");

                progressWrapper.css({
                    "background-color": "#E24B17",
                    "border-color": "#E24B17"
                });
            } else if (e.value <= 6) {
                progressStatus.text("Good");

                progressWrapper.css({
                    "background-color": "#EE9F05",
                    "border-color": "#EE9F05"
                });
            } else {
                progressStatus.text("Strong");

                progressWrapper.css({
                    "background-color": "#8EBC00",
                    "border-color": "#8EBC00"
                });
            }
        }
    </script>

    <style scoped>
        .demo-section h3
        {
            display: inline-block;
            width: 150px;
            text-align: right;
            margin-right: 10px;
        }
        
        .forms
        {
            list-style: none;
            padding-left: 0;
        }
        
        .forms li
        {
            margin-bottom: 5px;
        }
        
        #passStrength
        {
            width: 147px;
        }
        
        #signupButton
        {
            width: 150px;
            margin-left: 162px;
        }
    </style>
</div>
