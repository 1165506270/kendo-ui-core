<div class="treeMap-wrapper" style="margin: auto;">
    @(Html.Kendo().TreeMap()
          .Name("treeMap")
          .DataSource(dataSource => dataSource
              .Read(read => read
                  .Action("_PopulationUSA", "TreeMap")
              )
              .Model(m => m.Children("Items"))
          )
          .ValueField("Value")
          .TextField("Name")
          .HtmlAttributes(new { style = "height:600px" })
    )
</div>
