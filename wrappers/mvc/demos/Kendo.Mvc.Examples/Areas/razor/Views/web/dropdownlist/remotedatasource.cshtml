<div class="demo-section" style="width: 250px;">
    <label for="products">Select Title:</label>
    @(Html.Kendo().DropDownList()
          .Name("products")
          .DataTextField("ProductName")
          .DataValueField("ProductID")
          .DataSource(source => {
              source.Read(read =>
              {
                  read.Action("GetProducts", "Home");
              }); 
          })
    )
</div>