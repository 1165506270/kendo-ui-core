@{    
    Layout = "~/Areas/razor/Views/Shared/_MobileLayout.cshtml";
}

@( Html.Kendo().MobileView()
        .Name("application-store")
        .Title("Buy Music")        
        .Content(
            @<text>
                <div class="head">&nbsp;</div>
                <ul data-role="listview" data-style="inset" data-type="group">
                    <li>Genres
                        <ul>
                            <li><a href="">Folk</a></li>
                            <li><a href="">Dance</a></li>
                            <li><a href="">Pop</a></li>
                            <li><a href="">R&B</a></li>
                            <li><a href="">Rap</a></li>
                            <li><a href="">Rock</a></li>
                        </ul>
                    </li>
                </ul>
                @(Html.Kendo().MobileButton()
                        .HtmlAttributes(new { style = "display: block; margin: 1em; text-align: center;" })
                        .Text("Go back!")
                        .Url("Index", "Application")
                )                
            </text>
        )
)

<style scoped>
    #application-store .head {
	    display: block;
	    margin: 1em;
	    height: 110px;
	    background: url(@Url.Content("~/content/mobile/shared/mymusic.jpg")) no-repeat center center;
        -webkit-background-size: 100% auto;
        background-size: 100% auto;
        -webkit-border-radius: 10px;
        border-radius: 10px;
    }
</style>
