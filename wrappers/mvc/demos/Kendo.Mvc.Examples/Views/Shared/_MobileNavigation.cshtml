@{
    var routeData = ViewContext.RouteData;
    var area = routeData.DataTokens["area"];
    var suite = routeData.Values["suite"];
    var controller = routeData.Values["controller"].ToString().Replace("_", "-");
    var action = routeData.Values["action"].ToString().Replace("_", "-");
    var currentArea = area == "aspx" ? "ASPX" : "Razor";
    var currentRoute = currentArea + "Default";
    var alternateArea = area == "aspx" ? "Razor" : "ASPX";
    var alternateRoute = alternateArea + "Default";
}

<a  data-role="backbutton" data-align="left" href="@(Url.RouteUrl(currentRoute, new { controller = "", action = "" }))">Back to all examples</a>
<a  data-role="button" data-align="right" href="@(Url.RouteUrl(alternateRoute, new { suite = suite, controller = controller, action = action }))">@alternateArea version</a>