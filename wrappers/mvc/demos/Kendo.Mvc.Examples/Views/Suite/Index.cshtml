<!DOCTYPE html>
<html>
<head>
    <title>Kendo UI Web Examples</title>
    <link href="@Url.Content("~/Content/suite.css")" rel="stylesheet">
</head>
<body>
    <div id="page">
        @foreach (string category in ViewBag.Navigation.Keys)
        {
            <h1>@category</h1>
            <ul>
                @foreach (NavigationWidget widget in ViewBag.Navigation[category])
                {
                    if (widget.Offline.SkipAlways || widget.Offline.SkipMvc) { continue; }
                    <li>
                        <h2>@widget.Text</h2>
                        <ul>
                            @foreach (NavigationExample example in widget.Items)
                            {
                                <li><a href='@(Url.Content(
                                    "~/" + ViewContext.RouteData.DataTokens["area"] + "/" +
                                    ViewContext.RouteData.Values["suite"] + "/" +
                                    ViewBag.Suite + "/" + example.Url))'>@example.Text</a></li>
                            }
                        </ul>
                    </li>
                }
            </ul>
        }
    </div>
</body>
</html>
